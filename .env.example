# =============================================================================
# API КЛЮЧИ (ОБЯЗАТЕЛЬНО ДЛЯ ПОЛНОЙ ФУНКЦИОНАЛЬНОСТИ)
# =============================================================================

# 2Captcha API ключ для решения CAPTCHA
# Получить на: https://2captcha.com/
CAPTCHA_API_KEY=your_2captcha_api_key_here

# OpenAI API ключ для генерации описаний и изображений
# Получить на: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# RapidAPI ключ для AliExpress DataHub API
# Получить на: https://rapidapi.com/datascraper/api/aliexpress-datahub
RAPIDAPI_KEY=your_rapidapi_key_here

# Allegro API ключи (опционально, для официального API)
# Получить на: https://developer.allegro.pl/
ALLEGRO_CLIENT_ID=your_allegro_client_id_here
ALLEGRO_CLIENT_SECRET=your_allegro_client_secret_here

# Настройки Flask
FLASK_ENV=production
FLASK_DEBUG=False

# Настройки базы данных (если используется)
DATABASE_URL=sqlite:///app.db

# Настройки Redis
REDIS_URL=redis://redis:6379/0

# Настройки безопасности
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Настройки CORS
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:80

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# =============================================================================
# НАСТРОЙКИ БРАУЗЕРА (ДЛЯ ИСПОЛЬЗОВАНИЯ CHROME С VPN)
# =============================================================================

# Использовать установленный Google Chrome вместо Chromium (true/false)
USE_INSTALLED_CHROME=true

# Путь к исполняемому файлу Google Chrome (оставьте пустым для автопоиска)
# macOS: /Applications/Google Chrome.app/Contents/MacOS/Google Chrome
# Linux: /usr/bin/google-chrome или /usr/bin/google-chrome-stable
# Windows: C:\Program Files\Google\Chrome\Application\chrome.exe
CHROME_EXECUTABLE_PATH=

# Подключиться к уже запущенному Chrome (если у вас Chrome уже открыт с VPN)
# Для этого запустите Chrome с флагом: --remote-debugging-port=9222
CONNECT_TO_EXISTING_CHROME=false
CHROME_DEBUG_PORT=9222

# =============================================================================
# НАСТРОЙКИ ПРОКСИ (АЛЬТЕРНАТИВА VPN В CHROME)
# =============================================================================

# Прокси сервер (формат: http://ip:port или https://ip:port)
PROXY_SERVER=

# Аутентификация прокси (если требуется)
PROXY_USERNAME=
PROXY_PASSWORD=

# Настройки Playwright
PLAYWRIGHT_BROWSERS_PATH=/ms-playwright

# Настройки производительности
MAX_WORKERS=4
TIMEOUT_SECONDS=300

# =============================================================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ ПОИСКА
# =============================================================================

# Режим отладки для Allegro скрапера (true/false)
ALLEGRO_DEBUG_MODE=false

# Максимальное количество попыток поиска
MAX_SEARCH_RETRIES=3

# Таймаут для запросов (в секундах)
REQUEST_TIMEOUT=30

# Задержка между запросами (в секундах)
REQUEST_DELAY=1
